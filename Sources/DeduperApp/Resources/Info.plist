<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Application Information -->
    <key>CFBundleName</key>
    <string>Deduper</string>
    <key>CFBundleDisplayName</key>
    <string>Deduper</string>
    <key>CFBundleIdentifier</key>
    <string>com.deduper.app</string>
    <key>CFBundleVersion</key>
    <string>1.0</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleExecutable</key>
    <string>Deduper</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleIconFile</key>
    <string>AppIcon</string>

    <!-- Privacy Permissions -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Deduper needs access to your Photos library to detect duplicate photos and videos.</string>

    <key>NSDocumentsFolderUsageDescription</key>
    <string>Deduper needs access to scan your documents for duplicate photos and videos.</string>

    <key>NSDownloadsFolderUsageDescription</key>
    <string>Deduper needs access to scan your downloads for duplicate photos and videos.</string>

    <key>NSDownloadsFolderUsageDescription</key>
    <string>Deduper needs access to scan your downloads for duplicate photos and videos.</string>

    <!-- Minimum System Version -->
    <key>LSMinimumSystemVersion</key>
    <string>13.0</string>

    <!-- Application Category -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.utilities</string>

    <!-- Supported Document Types -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>Image Files</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.image</string>
                <string>public.jpeg</string>
                <string>public.png</string>
                <string>com.apple.heic</string>
                <string>com.apple.raw-image</string>
            </array>
        </dict>
        <dict>
            <key>CFBundleTypeName</key>
            <string>Video Files</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.movie</string>
                <string>public.mpeg-4</string>
                <string>com.apple.quicktime-movie</string>
            </array>
        </dict>
    </array>

    <!-- URL Types (for potential future features) -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>Deduper URL Handler</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>deduper</string>
            </array>
        </dict>
    </array>
</dict>
</plist>
